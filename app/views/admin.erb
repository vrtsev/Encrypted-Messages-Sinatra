<div class="jumbotron">
  <h1>Все сообщения</h1>
  <p>Кол-во: <%= @messages.count %></p>
  <br />
  <% @messages.each do |m| %>
    <p><%= m.id %> <a class="btn btn-primary btn-lg" href="/messages/check/<%= m.id %>" role="button"><%= m.content %></a> (<%= m.status %>) </p>
  <% end %>
  <br />
  <p><a class="btn btn-primary btn-lg" href="/" role="button">На главную</a></p>
  <p><a class="btn btn-primary btn-lg" href="/messages/clear" role="button">Удалить все сообщения</a></p>
</div>